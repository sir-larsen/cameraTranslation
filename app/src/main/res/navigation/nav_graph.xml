<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/cameraFragment">

    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.example.cameratranslation.CameraFragment"
        android:label="fragment_camera"
        tools:layout="@layout/fragment_camera" />
    <fragment
        android:id="@+id/phrasesFragment"
        android:name="com.example.cameratranslation.PhrasesFragment"
        android:label="fragment_phrases"
        tools:layout="@layout/fragment_phrases" >
        <action
            android:id="@+id/action_phrasesFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/translateFragment"
        android:name="com.example.cameratranslation.TranslateFragment"
        android:label="fragment_translate"
        tools:layout="@layout/fragment_translate" />
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.cameratranslation.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" />
</navigation>